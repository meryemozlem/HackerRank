#Ali ve Ayşe birbirlerine top atarak oyun oynuyorlarmış. Ali koordinat sisteminde x doğrusunun üstünde A noktasında, Ayşe ise koordinat sisteminde x doğrusunun üstünde B noktasındadır.
#Ayşe "Ali topu at" demiş. Ali bunu duyunca topu atmış. Top tam Ayşe'nin olduğu konuma düştüyse Ali topu ne kadar uzağa atmıştır?
#include <stdio.h>

#include <stdlib.h>

int main(int argc, char *argv[]) {
    struct konumlar
    {
        int x,y;

    };
    struct konumlar n1,n2;
    float uzaklik;
    
    printf("Ali'nin konum koordinatlarini giriniz.");
    scanf("%d%d",&n1.x,&n2.y);
    
    printf("Ayse'nin konum koordinatlarini giriniz.");
    scanf("%d%d",&n2.x,&n2.y);
    
    uzaklik=sqrt(pow((n1.x-n2.x),2)+pow((n1.y-n2.y),2));
    
    printf("Açiklama: iki nokta arasindaki mesafe %lf'dir.",uzaklik);
    return 0;
}
printf("Açiklama: top mesafesi %lf'dir.",uzaklik);
    return 0;
}





#include<stdio.h>
#include<math.h>
int X1,Y1,X2,Y2,d1,d2;
float d;
main()
{
printf(“Birinci noktanin koordinatlarini giriniz\n”);

printf(“\nX1=”);scanf(“%d”,&X1);

printf(“\nY1=”);scanf(“%d”,&Y1);

printf(“\nIkinci noktanin koordinatlarini giriniz\n”);

printf(“\nX2=”);scanf(“%d”,&X2);

printf(“\nY2=”);scanf(“%d”,&Y2);

/* Hesaplamalar */

d1=pow((X2-X1),2);  /* pow(x,y) fonksiyonu x’in y kuvvetidir */

d2=pow((Y2-Y1),2);

d=sqrt(d1+d2);

/* Ekran ciktisi */

printf(“\nIki nokta arasi uzaklik:%0.1f\n\n”,d);

return 0;

}




#include <stdio.h>
#include <conio.h>
#include <math.h>
 
void main(void)
{
 int x1 = 0, y1 = 0;
 int x2 = 0, y2 = 0;
 float mesafe = 0 ;
 clrscr();
 printf("\n 1. Nokta (X Y): ");
 scanf("%d %d",&x1,&y1);
 fflush(stdin);
 
 printf("\n 2. Nokta (X Y): ");
 scanf("%d %d",&x2,&y2);
 fflush(stdin);
 
 mesafe = sqrt( pow( (y2-y1),2) + pow((x2-x1),2) ) ;
 printf("\n Mesafe : %.2f",mesafe);
 
 getch();
}
